<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Knowledge Learning{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <!-- HEADER -->
    <header>
        <div class="header-container">
            <img src="{{ asset('images/logo.jpg') }}" alt="Logo Knowledge" class="logo">

            <nav class="nav-links desktop-nav">
                <a href="{{ path('app_homepage') }}">Accueil</a>
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('admin_dashboard') }}">Formation</a>
                {% elseif is_granted('ROLE_USER') %}
                    <a href="{{ path('app_dashboard') }}">Formation</a>
                {% else %}
                    <a href="{{ path('app_homepage') }}">Formation</a>
                {% endif %}
                <a href="{{ path('panier_afficher') }}">Panier</a>
                <a href="{{ path('app_boutique') }}">Boutique</a>
            </nav>

            <div class="search-bar">
                <input type="text" placeholder="Recherche...">
            </div>

            <div class="auth-links">
                {% if app.user %}
                    <span class="user-info">ðŸ‘¤ Bonjour {{ app.user.prenom ?? app.user.email }}</span>
                    <a href="{{ path('app_logout') }}" class="btn-auth">Se dÃ©connecter</a>
                {% else %}
                    <a href="{{ path('app_login') }}" class="btn-auth">Se connecter</a>
                    <a href="{{ path('app_register') }}" class="btn-auth">Inscription</a>
                {% endif %}
            </div>

            <button id="mobile-toggle" class="mobile-toggle">â˜°</button>
        </div>

        <!-- MENU MOBILE -->
        <nav class="nav-mobile" id="mobile-menu">
            <a href="{{ path('app_homepage') }}">Accueil</a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('admin_dashboard') }}">Formation</a>
            {% elseif is_granted('ROLE_USER') %}
                <a href="{{ path('app_dashboard') }}">Formation</a>
            {% else %}
                <a href="{{ path('app_homepage') }}">Formation</a>
            {% endif %}
            <a href="{{ path('app_boutique') }}">Boutique</a>
            <a href="{{ path('panier_afficher') }}">Panier</a>

            {% if app.user %}
                <a href="{{ path('app_logout') }}">Se dÃ©connecter</a>
            {% else %}
                <a href="{{ path('app_login') }}">Se connecter</a>
                <a href="{{ path('app_register') }}">Inscription</a>
            {% endif %}
        </nav>
    </header>

    <!-- MAIN CONTENT -->
    <main class="main-content">
        {% block body %}{% endblock %}
    </main>

    <!-- FOOTER -->
    <footer class="footer">
        <p>Â© Knowledge Learning - Tous droits rÃ©servÃ©s</p>
    </footer>

    {% block javascripts %}
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                const toggle = document.getElementById("mobile-toggle");
                const menu = document.getElementById("mobile-menu");
                if (toggle && menu) {
                    toggle.addEventListener("click", () => {
                        menu.classList.toggle("open");
                    });
                }
            });
        </script>
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</body>
</html>
