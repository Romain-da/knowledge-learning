{% extends 'base.html.twig' %}

{% block title %}Gestion des certifications{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>üìú Gestion des Certifications</h1>

    <a href="{{ path('admin_certification_create') }}" class="btn btn-success mb-3">‚ûï Ajouter une certification</a>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Date d'obtention</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for certification in certifications %}
                <tr>
                    <td>{{ certification.id }}</td>
                    <td>{{ certification.title }}</td> {# Remplace 'nom' par 'title' #}
                    <td>{{ certification.description ?: 'Aucune description' }}</td>
                    <td>{{ certification.dateObtention ? certification.dateObtention|date('d/m/Y') : 'Non d√©finie' }}</td>
                    <td>
                        <a href="{{ path('admin_certification_edit', { id: certification.id }) }}" class="btn btn-sm btn-primary">‚úèÔ∏è Modifier</a>
                        <a href="{{ path('admin_certification_delete', { id: certification.id }) }}"
                           class="btn btn-sm btn-danger"
                           onclick="return confirm('Confirmer la suppression ?');">üóë Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">Aucune certification disponible.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
