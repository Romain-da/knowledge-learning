{% extends 'base.html.twig' %}

{% block title %}Gestion des Cursus{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>📚 Gestion des Cursus</h1>

    <a href="{{ path('admin_cursus_create') }}" class="btn btn-success mb-3">➕ Ajouter un cursus</a>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Catégorie</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for cursus in cursusList %}
                <tr>
                    <td>{{ cursus.id }}</td>
                    <td>{{ cursus.nom }}</td>
                    <td>{{ cursus.description }}</td>
                    <td>{{ cursus.prix }} €</td>
                    <td>{{ cursus.categorie }}</td>
                    <td>
                        <a href="{{ path('admin_cursus_edit', { id: cursus.id }) }}" class="btn btn-sm btn-primary">✏️ Modifier</a>
                        <a href="{{ path('admin_cursus_delete', { id: cursus.id }) }}" 
                           class="btn btn-sm btn-danger"
                           onclick="return confirm('Confirmer la suppression ?');">🗑 Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Aucun cursus disponible.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
