{% extends 'base.html.twig' %}

{% block title %}{{ is_edit ? 'Modifier' : 'Créer' }} un Cursus{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>{{ is_edit ? 'Modifier' : 'Créer' }} un Cursus</h1>

    {{ form_start(form) }}
        {{ form_row(form.nom) }}
        {{ form_row(form.description) }}
        {{ form_row(form.prix) }}
        {{ form_row(form.categorie) }}
        <button type="submit" class="btn btn-primary">
            {{ is_edit ? 'Mettre à jour' : 'Créer' }}
        </button>
        <a href="{{ path('admin_cursus') }}" class="btn btn-secondary">Annuler</a>
    {{ form_end(form) }}
</div>
{% endblock %}
