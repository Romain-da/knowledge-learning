{% extends 'base.html.twig' %}

{% block title %}Gestion des achats{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>üì¶ Gestion des achats</h1>
    <a href="{{ path('admin_order_create') }}" class="btn btn-success mb-3">‚ûï Ajouter un achat</a>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Utilisateur</th>
                <th>Montant</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for achat in achats %}
                <tr>
                    <td>{{ achat.id }}</td>
                    <td>{{ achat.user.email }}</td>
                    <td>{{ achat.montant }}‚Ç¨</td>
                    <td>{{ achat.date|date('d/m/Y') }}</td>
                    <td>
                        <a href="{{ path('admin_order_edit', {'id': achat.id}) }}" class="btn btn-primary btn-sm">‚úè Modifier</a>
                        <a href="{{ path('admin_order_delete', {'id': achat.id}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Confirmer la suppression ?');">‚ùå Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucun achat enregistr√©.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
