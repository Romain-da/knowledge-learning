{% extends 'base.html.twig' %}

{% block title %}Gestion des achats{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Achats</h1>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Utilisateur</th>
                <th>Date</th>
                <th>Montant</th>
            </tr>
        </thead>
        <tbody>
            {% for achat in achats %}
                <tr>
                    <td>{{ achat.id }}</td>
                    <td>{{ achat.user.email }}</td>
                    <td>{{ achat.date|date('d/m/Y H:i') }}</td>
                    <td>{{ achat.amount }} €</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucun achat enregistré.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
