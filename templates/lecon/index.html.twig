{% extends 'base.html.twig' %}

{% block title %}Mes Le√ßons{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">üìò Le√ßons du cursus : {{ cursus.nom }}</h1>

    {% set total = lecons|length %}
    {% set vues = 0 %}

    {% for lecon in lecons %}
        {% set estVue = false %}
        {% for suivie in lecon.suivies %}
            {% if suivie.user == app.user %}
                {% set estVue = true %}
            {% endif %}
        {% endfor %}
        {% if estVue %}
            {% set vues = vues + 1 %}
        {% endif %}
    {% endfor %}

    {% if total > 0 %}
        <div class="mb-4">
            <strong>Progression :</strong> {{ vues }}/{{ total }} le√ßon(s) vues ({{ (vues / total * 100)|number_format(0) }} %)
            <div class="progress mt-1">
                <div class="progress-bar bg-success" role="progressbar" style="width: {{ (vues / total * 100)|number_format(0) }}%" aria-valuenow="{{ vues }}" aria-valuemin="0" aria-valuemax="{{ total }}"></div>
            </div>
        </div>
    {% endif %}

    {% if lecons is empty %}
        <div class="alert alert-info">üö´ Vous n'avez acc√®s √† aucune le√ßon pour ce cursus.</div>
    {% else %}
        <div class="list-group">
            {% for lecon in lecons %}
                {% set estVue = false %}
                {% for suivie in lecon.suivies %}
                    {% if suivie.user == app.user %}
                        {% set estVue = true %}
                    {% endif %}
                {% endfor %}

                <a href="{{ path('voir_lecon', { id: lecon.id }) }}" class="list-group-item list-group-item-action mb-2 d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1">
                            {{ lecon.titre }}
                            {% if estVue %}
                                <span class="badge bg-success">‚úÖ Vue</span>
                            {% endif %}
                        </h5>
                        <p class="mb-1">{{ lecon.contenu[:120]|raw }}...</p>
                        <small class="text-muted">‚û°Ô∏è Cliquez pour voir la le√ßon</small>
                    </div>
                </a>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
