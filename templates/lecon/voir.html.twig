{% extends 'base.html.twig' %}

{% block title %}{{ lecon.titre }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">📖 {{ lecon.titre }}</h1>

    <div class="mb-3">
        <p>{{ lecon.contenu|raw }}</p>
    </div>

    <div class="alert alert-success">
        ✅ Cette leçon est maintenant marquée comme "suivie".
    </div>

    <a href="{{ path('lecons_cursus', { id: lecon.cursus.id }) }}" class="btn btn-secondary">
        ← Retour au cursus {{ lecon.cursus.nom }}
    </a>
</div>
{% endblock %}
